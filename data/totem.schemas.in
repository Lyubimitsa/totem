<gconfschemafile>
    <schemalist>    

      <schema>
        <key>/schemas/apps/totem/audio_driver</key>
	<applyto>/apps/totem/audio_driver</applyto>
	<owner>totem</owner>
	<type>string</type>
	<default>auto</default>
	<locale name="C">
	  <short>Default audio output driver</short>
	  <long>Default audio output driver</long>
	</locale>
      </schema>

      <schema>
        <key>/schemas/apps/totem/auto_resize</key>
	<applyto>/apps/totem/auto_resize</applyto>
	<owner>totem</owner>
	<type>bool</type>
	<default>FALSE</default>
	<locale name="C">
	  <short>Resize the canvas automatically on file load</short>
	  <long>Resize the canvas automatically on file load</long>
	</locale>
      </schema>

      <schema>
        <key>/schemas/apps/totem/launch_once</key>
	<applyto>/apps/totem/launch_once</applyto>
	<owner>totem</owner>
	<type>bool</type>
	<default>FALSE</default>
	<locale name="C">
	  <short>
	    Only start if there isn't already a Totem application running
	  </short>
	  <long>
	    Only start if there isn't already a Totem application running
	  </long>
	</locale>
      </schema>

      <schema>
        <key>/schemas/apps/totem/mediadev</key>
	<applyto>/apps/totem/mediadev</applyto>
	<owner>totem</owner>
	<type>string</type>
	<default>/dev/cdrom</default>
	<locale name="C">
	  <short>Path to the optical media device</short>
	  <long>Path to the optical media device</long>
	</locale>
      </schema>

  </schemalist>
</gconfschemafile>
